<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/background_main">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="40dp"
                android:src="@drawable/music_player"/>
        </RelativeLayout>
        <GridLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:columnCount="2"

            android:rowCount="3">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
android:onClick="Go_To_SetWork"
                android:layout_margin="5dp"
                android:background="@color/red"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="130dp"
                        android:scaleType="fitXY"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dambel_man"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/main_set_counter"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/vazir"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:onClick="Go_To_Drink_Water"
                android:layout_margin="5dp"
                android:background="@color/red"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="15sp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_drik_water"
                        android:padding="10dp"/>
                    <TextView
                      android:gravity="bottom|center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="یادآور آب"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/vazir"/>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/red"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20sp"
                            android:src="@drawable/sad_girl_weigh"
                            android:padding="10dp"/>
                        <TextView
                            android:gravity="bottom|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="محاسبه BMI"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/vazir"/>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/red"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20sp"
                            android:src="@drawable/step" />
                        <TextView
                            android:gravity="bottom|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="قدم شمار"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/vazir"/>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/red"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="15dp"
                            android:layout_marginBottom="20sp"
                            android:src="@drawable/heart_rate" />
                        <TextView
                            android:gravity="bottom|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="ضربان قلب"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/vazir"/>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/red"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="35sp"
                            android:src="@drawable/main_chart" />
                        <TextView
                            android:gravity="bottom|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="آمار"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/vazir"/>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/red"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingTop="15sp"
                            android:paddingBottom="15sp"
                            android:src="@drawable/sport_girl_1" />
                        <TextView
                            android:gravity="bottom|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="موزیک پلیر"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/vazir"/>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/red"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingTop="28dp"
                            android:paddingBottom="28dp"
                            android:src="@drawable/setting" />
                        <TextView
                            android:gravity="bottom|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="تنظیمات"

                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/vazir"/>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </GridLayout>
    </LinearLayout>


</ScrollView>